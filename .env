# Configuración del ZKTeco Bridge Service
# Renombrar este archivo a .env

# Puerto del servicio
PORT=5000

# Host (0.0.0.0 para permitir conexiones externas, 127.0.0.1 solo local)
HOST=0.0.0.0

# Modo debug (true/false)
DEBUG=false

# Nivel de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Archivo de log
LOG_FILE=logs/bridge_service.log

# Tamaño máximo del archivo de log (MB)
LOG_MAX_SIZE=10

# Timeout para operaciones del dispositivo (segundos)
DEVICE_TIMEOUT=30

# Intervalo entre capturas (milisegundos)
CAPTURE_INTERVAL=100

# Número máximo de reintentos en caso de error
MAX_RETRIES=3

# Tiempo de espera entre reintentos (segundos)
RETRY_DELAY=1

# Habilitar CORS (true/false)
ENABLE_CORS=true

# Orígenes permitidos para CORS (separados por coma)
CORS_ORIGINS=http://localhost:8000,http://localhost:80,http://127.0.0.1:8000